{{> navbar}}
<body>
    <div class="container-app">
        {{> sidebar}}
        <div class="main-content">
            <h2>Editar Instituci√≥n</h2>

            <form action="/usuario/editarInstitucion" method="POST">
            <input type="hidden" name="idInstitucion" value="{{idInstitucion}}">

            <label>Nombre:</label>
            <input type="text" name="nombre" value="{{institucion.nombre}}" required>

            <label>Cargo:</label>
            <input type="text" name="cargo" value="{{institucion.cargo}}" required>

            <label>Cursos:</label>
            <div id="cursos-container">
                {{#each institucion.cursos}}
                <input type="text" name="cursos[]" value="{{this}}">
                {{/each}}
            </div>

            <button type="button" id="agregar-curso">Agregar curso</button>
            <br><br>
            <button type="submit">Guardar cambios</button>
            </form>

            <script>
            document.getElementById('agregar-curso').addEventListener('click', () => {
                const input = document.createElement('input');
                input.type = 'text';
                input.name = 'cursos[]';
                document.getElementById('cursos-container').appendChild(input);
            });
            </script>
        </div>
    </div>
</body>