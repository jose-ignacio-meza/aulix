<body>
    {{> navbar}}  
    <div class="container-app"> 
        {{> sidebar}}
        <div class="main-content d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="tituloEncabezado mb-4">
                <h1>Listado de Usuarios</h1>
            </div>
            
            <form action="/admin/crearUsuario" method="POST" class="p-4 rounded shadow bg-white" style="width: 60%; min-width: 320px; max-width: 600px;">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" required class="form-control">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" required class="form-control">
                </div>
                <div class="mb-3 d-flex align-items-center">
                    <div class="flex-grow-1 me-2">
                        <label for="password" class="form-label">Contraseña:</label>
                        <input type="text" id="password" name="password" required readonly class="form-control">
                    </div>
                    <button type="button" onclick="generarPassword()" class="btn btn-secondary mt-4">Generar automática</button>
                </div>
                <button type="submit" class="btn btn-primary w-100">Crear Usuario</button>
            </form>
        </div>
    </div>
    <script>
        function generarPassword() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()';
            let password = '';
            for (let i = 0; i < 10; i++) {
                password += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            document.getElementById('password').value = password;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>