<!-- views/admin/editarArea.handlebars -->

<style>
    .form-area {
        background: #f5f8fa;
        padding: 2rem;
        border-radius: 8px;
        max-width: 500px;
        margin: 2rem auto;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.08);
    }
    .form-group label {
        color: #34495e;
        font-weight: 600;
    }
    .form-control {
        border: 1px solid #b2bec3;
        border-radius: 4px;
        padding: 0.5rem;
        background: #eaf0f6;
        color: #2d3436;
    }
    .btn-primary {
        background: #2980b9;
        border: none;
        color: #fff;
    }
    .btn-primary:hover {
        background: #2471a3;
    }
    .btn-secondary {
        background: #b2bec3;
        border: none;
        color: #2d3436;
        margin-left: 0.5rem;
    }
    .btn-secondary:hover {
        background: #636e72;
        color: #fff;
    }
</style>

{{> navbar}}
<body>
    <div class="container-app">
    {{> sidebar}}
        <div class="main-content" style="justify-content: flex-start;">
            <div class="container">
                <h2>Editar Área</h2>

                <form action="/admin/editarArea/{{area._id}}" method="POST" class="form-area">
                    <div class="form-group">
                        <label for="nombre">Nombre del Área</label>
                        <input
                            type="text"
                            id="nombre"
                            name="nombre"
                            class="form-control"
                            value="{{area.nombre}}"
                            required
                        >
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a href="/admin/areas" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</body>