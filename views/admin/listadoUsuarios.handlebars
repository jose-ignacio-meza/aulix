{{> navbar}}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .user-list {
            margin-top: 30px;
            width: 80%;
        }
        .user-list li {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
            background: #fff;
        }
        .user-actions {
            display: flex;
            gap: 10px;
            align-items: flex-end;
        }
        .tituloEncabezado {
            margin-bottom: 20px;
        }
        .main-content {
            padding: 30px;
            border-radius: 10px;
            display: flex;
            justify-content: flex-start;
        }
    </style>
</head>
<body>
    <div class="container-app"> 
        {{> sidebar}}
        <div class="main-content">
            <div class="tituloEncabezado">
                <h1>Listado de Usuarios</h1>
            </div>
            
            <p>Total de usuarios: {{usuarios.length}}</p>
            <ul class="user-list list-group list-group-numbered">
                {{#each usuarios}}
                    <li class="list-group-item">
                        <span>{{this.email}}</span>
                        <span class="user-actions">
                            <a href="/admin/deleteUsuario/{{this._id}}">
                                <button class="btn btn-danger btn-sm">Eliminar</button>
                            </a>
                            <a href="/admin/uptdateUsuario/{{this._id}}">
                                <button class="btn btn-primary btn-sm">Modificar</button>
                            </a>
                        </span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>