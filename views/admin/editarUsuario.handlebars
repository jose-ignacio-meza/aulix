<body></body>
    <div class="container-app"> 
        {{> sidebar}}
        <div class="main-content d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="tituloEncabezado mb-4">
                <h1>Modificar Usuario {{usuario.email}}</h1>
            </div>
            
            <h2>Editar Usuario</h2>

            <form action="/admin/editarUsuario" method="POST">
            <!-- ID oculto -->
            <input type="hidden" name="id" value="{{usuario._id}}" />

            <!-- Información de cuenta -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                value="{{usuario.email}}"
                required
                />
            </div>

            <div class="mb-3">
                <label for="rol" class="form-label">Rol</label>
                <select name="rol" id="rol" class="form-select">
                <option value="admin" {{#if (eq usuario.rol "admin")}}selected{{/if}}>Admin</option>
                <option value="cliente" {{#if (eq usuario.rol "usuario")}}selected{{/if}}>Cliente</option>
                </select>
            </div>

            <!-- Encabezado de datos personales -->
            <hr />
            <h4>Datos Personales</h4>

            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input
                type="text"
                class="form-control"
                name="nombre"
                id="nombre"
                value="{{usuario.datosPersonales.nombre}}"
                />
            </div>

            <div class="mb-3">
                <label for="apellido" class="form-label">Apellido</label>
                <input
                type="text"
                class="form-control"
                name="apellido"
                id="apellido"
                value="{{usuario.datosPersonales.apellido}}"
                />
            </div>

            <div class="mb-3">
                <label for="dni" class="form-label">DNI</label>
                <input
                type="text"
                class="form-control"
                name="dni"
                id="dni"
                value="{{usuario.datosPersonales.dni}}"
                />
            </div>

            <div class="mb-3">
                <label for="telefono" class="form-label">Teléfono</label>
                <input
                type="text"
                class="form-control"
                name="telefono"
                id="telefono"
                value="{{usuario.datosPersonales.telefono}}"
                />
            </div>

            <div class="mb-3">
                <label for="domicilio" class="form-label">Domicilio</label>
                <input
                type="text"
                class="form-control"
                name="domicilio"
                id="domicilio"
                value="{{usuario.datosPersonales.domicilio}}"
                />
            </div>

            <div class="mb-3">
                <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input
                type="date"
                class="form-control"
                name="fechaNacimiento"
                id="fechaNacimiento"
                value="{{usuario.datosPersonales.fechaNacimiento}}"
                />
            </div>

            <div class="mb-3">
                <label for="genero" class="form-label">Género</label>
                <select name="genero" id="genero" class="form-select">
                <option value="hombre" {{#if (eq usuario.datosPersonales.genero "hombre")}}selected{{/if}}>Hombre</option>
                <option value="mujer" {{#if (eq usuario.datosPersonales.genero "mujer")}}selected{{/if}}>Mujer</option>
                <option value="otro" {{#if (eq usuario.datosPersonales.genero "otro")}}selected{{/if}}>Otro</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="cargo" class="form-label">Cargo</label>
                <input
                type="text"
                class="form-control"
                name="cargo"
                id="cargo"
                value="{{usuario.datosPersonales.cargo}}"
                />
            </div>

            <div class="mb-3">
                <label for="titulo" class="form-label">Título</label>
                <input
                type="text"
                class="form-control"
                name="titulo"
                id="titulo"
                value="{{usuario.datosPersonales.titulo}}"
                />
            </div>

            <!-- Botón de envío -->
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
            </form>

        </div>
    </div>
    <script>
        function generarPassword() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()';
            let password = '';
            for (let i = 0; i < 10; i++) {
                password += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            document.getElementById('password').value = password;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>